{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_comment": "Extends template config. Projects can add overrides to 'exclude' array.",
  "extends": "./config/typescript/tsconfig.template.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
